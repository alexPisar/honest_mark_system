<base:ReportControlBase x:Class="Reporter.Controls.DocumentDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:base="clr-namespace:Reporter.Controls.Base"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:en="clr-namespace:Reporter.Enums"
             xmlns:ent="clr-namespace:Reporter.Entities"
             xmlns:local="clr-namespace:Reporter.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Height="50" Orientation="Horizontal">
                <TextBlock Width="200" Margin="10 5">Наименование документа</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=DocumentName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
                <TextBlock Width="150" Margin="20 5">Номер документа</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=DocumentNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal">
                <TextBlock Width="415" Margin="10 5" TextAlignment="Center">Идентификатор файла обмена документа, подписанного первой стороной</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=FirstDocumentId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
                <TextBlock Width="100" Margin="10 5" TextAlignment="Center">Дата документа</TextBlock>
                <DatePicker Margin="5 5" Width="60" SelectedDate="{Binding Path=DateReceive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal">
                <TextBlock Width="215" Margin="10 5" TextAlignment="Center">Идентификатор документа</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=DocumentId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal">
                <TextBlock Width="415" Margin="10 5" TextAlignment="Center">Основание, по которому организации доверено принятие товаров</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=ReasonOrgTrust, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal">
                <TextBlock Width="415" Margin="10 5" TextAlignment="Center">Основание, по которому организации доверено принятие товаров</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=ReasonOrgTrust, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal">
                <TextBlock Width="415" Margin="10 5" TextAlignment="Center">Основание, по которому организации доверено принятие товаров</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=ReasonOrgTrust, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
            </StackPanel>
            <StackPanel Height="50" Orientation="Horizontal">
                <TextBlock Width="415" Margin="10 5" TextAlignment="Center">Основание, по которому организации доверено принятие товаров</TextBlock>
                <base:ReportTextBox Height="25" Margin="5 5" Width="150" Text="{Binding Path=ReasonOrgTrust, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></base:ReportTextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</base:ReportControlBase>

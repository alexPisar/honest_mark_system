<UserControl x:Class="UtilitesLibrary.Controls.ProxyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilitesLibrary.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="HeaderLabel" Grid.Row="0" Content="Введите логин и пароль от прокси сервера: " />
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Width="60" Content="Логин" />
                <TextBox x:Name="LoginTextBox" Width="250" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5">
                <Label Width="60" Content="Пароль" />
                <PasswordBox x:Name="PasswordTextBox" Width="250" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 5">
                <Button Content="Вход" Margin="5 0" Width="80" Height="25" Click="EnterButton_Click" />
                <Button Content="Отмена" Margin="5 0" Width="80" Height="25" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
